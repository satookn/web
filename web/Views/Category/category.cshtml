@model List<web.Context.Category>
@{
    ViewBag.Title = "category";
}


<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            @foreach(var item in Model)
        {
            <div class="col-md-3">

                <div class="card card-category">
                    <div class="img-wrap" style="background: #ffd7d7">
                        <a href="@Url.Action("ProductCategory","Category",new { Id = item.Id })">
                            <img src="~/Content/images/category/@item.Avatar">

                        </a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title text-center text-uppercase"><a href="@Url.Action("ProductCategory","Category",new { Id = item.Id })">@item.Name</a></h4>
                       
                    </div>
                </div>
            </div> <!-- col.// -->
           
        }
        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
</section>

